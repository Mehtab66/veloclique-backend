#!/usr/bin/env node

/**
 * Module dependencies.
 */
import dotenv from "dotenv";
dotenv.config();

import app from "../app.js";
import debugLib from "debug";
import http from "http";

const debug = debugLib("veloclique-backend:server");

/**
 * Get port from environment and store in Express.
 */
const port = normalizePort(process.env.PORT || "4000");
app.set("port", port);

/**
 * Create HTTP server.
 */
const server = http.createServer(app);

// ====================================================
// Railway-Specific Configuration
// ====================================================
console.log(`ðŸš€ Starting server in ${process.env.NODE_ENV || 'development'} mode`);
console.log(`ðŸ“¡ Environment: ${process.env.NODE_ENV || 'development'}`);
console.log(`ðŸŒ Port: ${port}`);

// Track server start time
const startTime = Date.now();

/**
 * Listen on provided port, on all network interfaces.
 * CRITICAL: Must bind to 0.0.0.0 for Railway
 */
server.listen(port, "0.0.0.0", () => {
  const addr = server.address();
  const bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
  debug("Listening on " + bind);
  console.log(`âœ… Server listening on ${bind} (0.0.0.0:${addr.port})`);
  console.log(`â±ï¸  Server started in ${Date.now() - startTime}ms`);

  // Log session store info
  const sessionStore = app.get("sessionStore");
  console.log(
    `ðŸ’¾ Session Store: ${sessionStore ? sessionStore.constructor.name : "Unknown"
    }`
  );
});

server.on("error", onError);

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  const port = parseInt(val, 10);
  if (isNaN(port)) return val;
  if (port >= 0) return port;
  return false;
}

/**
 * Error handler for server errors
 */
function onError(error) {
  if (error.syscall !== "listen") {
    throw error;
  }

  const bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

  switch (error.code) {
    case "EACCES":
      console.error(`âŒ ${bind} requires elevated privileges`);
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(`âŒ ${bind} is already in use`);
      process.exit(1);
      break;
    default:
      throw error;
  }
}

// ====================================================
// Railway Health Check Simulator (For Debugging)
// ====================================================
if (process.env.NODE_ENV === "production") {
  // Simulate Railway's health check behavior
  setTimeout(() => {
    console.log("ðŸ” Simulating Railway health check...");
    console.log("ðŸ” Health check would hit: GET http://localhost:" + port + "/health");
  }, 5000);
}

// ====================================================
// Graceful Shutdown Handlers
// ====================================================

// Track if we're already shutting down
let isShuttingDown = false;

// Handle SIGTERM (Railway sends this before stopping container)
process.on('SIGTERM', () => {
  if (isShuttingDown) return;
  isShuttingDown = true;

  const uptime = process.uptime();
  console.log('ðŸ›‘ SIGTERM received: performing graceful shutdown');
  console.log(`â±ï¸  Server was running for ${Math.round(uptime)} seconds`);
  console.log('â³ Graceful shutdown started...');

  // Log the exact time we received SIGTERM
  console.log(`ðŸ• SIGTERM received at: ${new Date().toISOString()}`);

  // Start graceful shutdown
  gracefulShutdown('SIGTERM');
});

// Handle SIGINT (Ctrl+C in local development)
process.on('SIGINT', () => {
  if (isShuttingDown) return;
  isShuttingDown = true;

  console.log('ðŸ›‘ SIGINT received: shutting down');
  gracefulShutdown('SIGINT');
});

// ====================================================
// Graceful Shutdown Function
// ====================================================
function gracefulShutdown(signal) {
  const shutdownStart = Date.now();
  const SHUTDOWN_TIMEOUT = 8000; // 8 seconds (Railway gives 10s)

  console.log(`â³ Starting ${signal} shutdown process...`);

  // Stop accepting new connections
  server.close((err) => {
    const elapsed = Date.now() - shutdownStart;

    if (err) {
      console.error(`âŒ Error closing HTTP server:`, err.message);
      console.log(`âš ï¸  Force exiting after ${elapsed}ms`);
      process.exit(1);
    } else {
      console.log(`âœ… HTTP server closed gracefully after ${elapsed}ms`);
      console.log(`ðŸ‘‹ Shutdown complete`);
      process.exit(0);
    }
  });

  // Force shutdown after timeout
  setTimeout(() => {
    console.error(`â° Shutdown timeout after ${SHUTDOWN_TIMEOUT}ms - forcing exit`);
    process.exit(1);
  }, SHUTDOWN_TIMEOUT);
}

// Keep the process alive
const keepAlive = setInterval(() => {
  // Empty - just keeps event loop alive
}, 2147483647); // Maximum interval

// Clear on shutdown
process.on('exit', () => {
  clearInterval(keepAlive);
});