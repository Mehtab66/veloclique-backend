import dotenv from "dotenv";
dotenv.config();

import app from "../app.js";
import debugLib from "debug";
import http from "http";

const debug = debugLib("veloclique-backend:server");

/**
 * Get port from environment and store in Express.
 */
const port = normalizePort(process.env.PORT || "4000");
app.set("port", port);

/**
 * Create HTTP server.
 */
const server = http.createServer(app);

/**
 * Railway-specific memory leak monitoring
 */
if (process.env.NODE_ENV === "production") {
  console.log("ðŸš€ Production mode - Enabling Railway memory monitoring");

  // Monitor memory usage every 30 seconds
  const memoryMonitor = setInterval(() => {
    const memoryUsage = process.memoryUsage();
    const usedMB = memoryUsage.heapUsed / 1024 / 1024;
    const rssMB = memoryUsage.rss / 1024 / 1024;

    console.log(
      `ðŸ“Š Memory - RSS: ${Math.round(rssMB)}MB, Heap: ${Math.round(usedMB)}MB`
    );

    // Emergency action if memory gets too high
    if (rssMB > 900) {
      console.warn(
        "ðŸš¨ CRITICAL: Memory usage exceeds 900MB! Taking emergency action..."
      );

      // Clear session store if it's MemoryStore
      const sessionStore = app.get("sessionStore");
      if (sessionStore && sessionStore.clear) {
        console.log("ðŸ”„ Emergency clearing of session store");
        sessionStore.clear((err) => {
          if (err) console.error("Emergency clear error:", err);
        });
      }

      // Suggest restart
      console.warn(
        "ðŸ’¡ Consider increasing memory limit or fixing session store"
      );
    }
  }, 30000); // Every 30 seconds

  // Clean up on server close
  server.on("close", () => {
    clearInterval(memoryMonitor);
  });
}

/**
 * Listen on provided port.
 */
server.listen(port);
server.on("error", onError);
server.on("listening", onListening);

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  const port = parseInt(val, 10);
  if (isNaN(port)) return val;
  if (port >= 0) return port;
  return false;
}

/**
 * Error handler
 */
function onError(error) {
  if (error.syscall !== "listen") throw error;

  const bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

  switch (error.code) {
    case "EACCES":
      console.error(bind + " requires elevated privileges");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " is already in use");
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Listener
 */
function onListening() {
  const addr = server.address();
  const bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
  debug("Listening on " + bind);
  console.log(`ðŸš€ Server running on port ${addr.port}`);
  console.log(`ðŸ“¡ Environment: ${process.env.NODE_ENV || "development"}`);

  // Log session store info
  const sessionStore = app.get("sessionStore");
  console.log(
    `ðŸ’¾ Session Store: ${
      sessionStore ? sessionStore.constructor.name : "Unknown"
    }`
  );

  // Initial memory usage
  const memoryUsage = process.memoryUsage();
  console.log(
    `ðŸ§  Initial Memory - RSS: ${Math.round(memoryUsage.rss / 1024 / 1024)}MB`
  );
}
